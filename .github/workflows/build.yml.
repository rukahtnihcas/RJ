name: Stable Build
on:
  workflow_dispatch:

jobs:
  build-app:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Java 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: üêç Generate Stable App Files
        run: |
          python3 -c '
          import os

          # 1. ROOT BUILD.GRADLE (Matched Versions)
          root_gradle = """
          plugins {
              id "com.android.application" version "8.0.0" apply false
              id "org.jetbrains.kotlin.android" version "1.8.0" apply false
          }
          """
          
          # 2. APP BUILD.GRADLE (Minimal & Clean)
          app_gradle = """
          plugins {
              id "com.android.application"
              id "org.jetbrains.kotlin.android"
          }
          android {
              namespace "com.example.personaldj"
              compileSdk 33
              defaultConfig {
                  applicationId "com.example.personaldj"
                  minSdk 24
                  targetSdk 33
                  versionCode 1
                  versionName "1.0"
              }
          }
          dependencies {
              implementation "androidx.core:core-ktx:1.9.0"
              implementation "androidx.appcompat:appcompat:1.6.1"
              implementation "androidx.media3:media3-exoplayer:1.0.0"
              implementation "androidx.media3:media3-session:1.0.0"
          }
          """

          # 3. MANIFEST
          manifest = """
          <?xml version="1.0" encoding="utf-8"?>
          <manifest xmlns:android="http://schemas.android.com/apk/res/android">
              <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
              <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>
              <application android:label="DJ Radio" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
                  <activity android:name=".MainActivity" android:exported="true">
                      <intent-filter>
                          <action android:name="android.intent.action.MAIN" />
                          <category android:name="android.intent.category.LAUNCHER" />
                      </intent-filter>
                  </activity>
                  <service android:name=".RadioService" android:foregroundServiceType="mediaPlayback" android:exported="false"/>
              </application>
          </manifest>
          """

          # 4. KOTLIN CODE (The App Logic)
          kotlin_code = """
          package com.example.personaldj
          import android.app.Service
          import android.content.Intent
          import android.os.Bundle
          import android.os.IBinder
          import android.widget.Button
          import android.widget.Toast
          import androidx.appcompat.app.AppCompatActivity
          import androidx.media3.common.MediaItem
          import androidx.media3.exoplayer.ExoPlayer

          class MainActivity : AppCompatActivity() {
              override fun onCreate(savedInstanceState: Bundle?) {
                  super.onCreate(savedInstanceState)
                  val btn = Button(this).apply {
                      text = "Tap to Start Radio"
                      setOnClickListener {
                          startService(Intent(context, RadioService::class.java))
                          Toast.makeText(context, "Radio Started!", Toast.LENGTH_SHORT).show()
                      }
                  }
                  setContentView(btn)
              }
          }

          class RadioService : Service() {
              private var player: ExoPlayer? = null
              override fun onBind(intent: Intent?): IBinder? = null
              override fun onCreate() {
                  super.onCreate()
                  player = ExoPlayer.Builder(this).build()
                  val item = MediaItem.fromUri("https://storage.googleapis.com/exoplayer-test-media-0/Jazz_In_Paris.mp3")
                  player.addMediaItem(item)
                  player.prepare()
                  player.play()
              }
              override fun onDestroy() {
                  player?.release()
                  super.onDestroy()
              }
          }
          """

          # Helper to write files
          def write(path, content):
              if "/" in path:
                  os.makedirs(os.path.dirname(path), exist_ok=True)
              with open(path, "w") as f:
                  f.write(content.strip())

          # Execute Writes
          write("build.gradle", root_gradle)
          write("settings.gradle", "rootProject.name = \"PersonalDJ\"\\ninclude \":app\"")
          write("app/build.gradle", app_gradle)
          write("app/src/main/AndroidManifest.xml", manifest)
          write("app/src/main/java/com/example/personaldj/MainActivity.kt", kotlin_code)
          '

      - name: Setup Gradle (Force Version 8.0)
        uses: gradle/actions/setup-gradle@v3
        with:
          gradle-version: '8.0'

      - name: Build APK
        run: gradle assembleDebug --no-daemon --stacktrace

      - name: Upload APK
        uses: actions/upload-artifact@v4
        if: success()
        with:
          name: stable-dj-app
          path: app/build/outputs/apk/debug/app-debug.apk
